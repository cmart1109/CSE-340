<title>
    <%- title %>
</title>
<h1>
    <%- title %>
</h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div class="form">
    <form action="/" method="post">
        <label for="classification_name">Classification Name:</label>
        <div class="password-directions">Name must be alphabetic characters only</div> 
        <input type="text" name="classification_name" id="classification_name" required value="<%= locals.classification_name %>" required pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+">
        <button type="submit">Register Classification</button>
    </form>
</div>